<Application x:Class="ExerciseTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExerciseTracker"
             xmlns:viewModel="clr-namespace:ExerciseTracker.ViewModels"
             xmlns:view="clr-namespace:ExerciseTracker.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:MainViewModel}">
            <view:MainWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModel:SessionListViewModel}">
            <view:SessionList/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModel:AddSessionViewModel}">
            <view:AddSession/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModel:ExerciseListViewModel}">
            <view:ExerciseList/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModel:AddExerciseViewModel}">
            <view:AddExercise/>
        </DataTemplate>

    </Application.Resources>
</Application>
