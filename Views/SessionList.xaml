<UserControl x:Class="ExerciseTracker.Views.SessionList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExerciseTracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock  Text="Training Sessions History" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button  
                Command="{Binding ShowExerciseListCommand}" 
                Content="Show exercise list" 
                Height="40" 
                Margin="20,0,0,0"
                Padding="10,0"/>
        </StackPanel>
        
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Sessions}"
                  SelectedItem="{Binding SelectedSession}"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding Description}" FontSize="18" TextWrapping="Wrap"/>

                            <TextBlock Text="{Binding Date, StringFormat={}{0:d}}" 
                                       FontStyle="Italic" 
                                       Foreground="DimGray" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" 
                Command="{Binding AddNewSessionCommand}"
                Content="Add new session" 
                Height="40" 
                Margin="0,10,0,0"
                Padding="10,0"/>
    </Grid>
</UserControl>
