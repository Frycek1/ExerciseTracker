<UserControl x:Class="ExerciseTracker.Views.AddExercise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>    
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Add New Exercise" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Save Exercise" Command="{Binding AddExerciseCommand}" Margin="20,0,0,0" Padding="10,0" Height="40"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="20,0,0,0" Padding="10,0" Height="40"/>
        </StackPanel>


        <TextBlock Grid.Row="1" Text="Exercise Name:" FontWeight="Medium"/>
        <TextBox Grid.Row="2" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" FontSize="16"/>

        <TextBlock Grid.Row="3" Text="Description (optional):" FontWeight="Medium"/>
        <TextBox Grid.Row="4" Text="{Binding Description}" MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,15" FontSize="16"/>
        <TextBlock Grid.Row="5" Text="Muscle Groups:" FontWeight="Medium" Margin="0,0,0,5" />
        <Border Grid.Row="6" BorderBrush="LightGray" BorderThickness="1" Padding="5">
            <ItemsControl ItemsSource="{Binding MuscleGroups}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding MuscleGroup.Name}" 
                                  IsChecked="{Binding IsSelected}" 
                                  Margin="5,5,15,5"
                                  MinWidth="150"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

    </Grid>
</UserControl>