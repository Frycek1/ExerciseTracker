<UserControl x:Class="ExerciseTracker.Views.AddSession"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExerciseTracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Dodaj Sesję Treningową" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        <Button Grid.Row="0" 
                Command="{Binding SaveSessionCommand}" 
                Content="Zapisz Sesję" 
                Height="40" 
                Margin="0,0,0,10" 
                HorizontalAlignment="Right"/> 
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Exercises}"
                  SelectedItem="{Binding SelectedExercise}"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
                        <TextBlock Text="{Binding Name}" FontSize="18"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Exercise" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Reps" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Weight" FontSize="18" Margin="0,0,0,10"/>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding ExerciseName}" Margin="0,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Reps}" Margin="0,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Weight}" Margin="0,0,10,0"/>
            <Button Grid.Row="1" Grid.Column="3" 
                    Command="{Binding AddExerciseCommand}" 
                    Content="Add" 
                    Height="30" 
                    Margin="0,0,10,0"/>

        </Grid>
    </Grid>
</UserControl>
